.container
    position: relative
    height: 100%
    color: #666
    .wrapper
        width: 100%
        height: 100%
    .site-header
        min-height: 100px
        width: 100%
        margin-bottom: 50px
        .site-meta
            display: inline-block
            width: 49%
    .outer
        width: 60%
        min-width: 600px
        margin: 0 auto
    .site-footer
        clear: both
        padding: 20px
        vertical-align: middle
        margin-top: 30px
        min-height: 100px
        border-top: 1px solid #3C9233
#site-navs
    font-size: 16px
    text-align: left
    display: inline-block
    width: 50%
    ul
        position: relative
        li:not(.header-underline)
            position: relative
            float: right
            padding: 8px
            margin: 0px 5px
            border-bottom: 2px solid #3C9233
            &.header-item-Home
                border-color: #D08321
            &.header-item-Archive
                border-color: blue
            &.header-item-About
                border-color: #CEB32F
            &.header-item-Logs
                border-color: #DFAFDA
            &:hover
                background-color: #3C9233
                border: none
                border-top-right-radius: 5px
                border-top-left-radius: 5px
